{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "warn",
            4
        ],
        // suppress errors for missing 'import React' in files
        "react/react-in-jsx-scope": "off",
        "quotes": [
            "error",
            "single"
        ],
        "eqeqeq": 2,
        "no-extra-semi": 2
    }
}